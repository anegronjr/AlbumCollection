@model AlbumCollection.Models.Song
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,200,300,400,600|Ubuntu:100,300,400,600,700" rel="stylesheet">
    <link href="~/CSS/Shared.css" rel="stylesheet">
    <link href="~/CSS/Create.css" rel="stylesheet">
</head>
<body>
    <header>
        <div class="logo"><span class="logo-1">Album</span><span class="logo-2">Collection</span></div>
        <nav>
            <ul>
                <li>Home</li>
                <li>Albums</li>
                <li>Artists</li>
                <li>About</li>
            </ul>
        </nav>
    </header>
    <main>
        <div class="create-container">
            <div class="create-header">
                <span>Add Song</span>
            </div>
            <form asp-action="Create" class="form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Title" class="form-control text-input" required />
                    <label asp-for="Title" class="control-label"></label>
                    <div class="underline">

                    </div>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="AlbumId" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="CREATE SONG" />
                </div>
            </form>
        </div>
    </main>
</body>
</html>
