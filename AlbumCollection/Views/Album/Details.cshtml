@model AlbumCollection.Models.Album

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>






    <div>
        <h1>@Model.Title</h1>
        <h3>@Model.Artist</h3>
        <ul>
            @foreach (var song in Model.Songs)
            {
                <li>@song.Title</li>
            }
        </ul>
        <a href="/Song/Create/@Model.AlbumId">Add Song</a>
        <a href="~/Album/Index">Return to Index</a>
    </div>
</body>
</html>
