@model AlbumCollection.Models.Album

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>
    <h1>@Model.Title</h1>
    <h3>@Model.Artist</h3>
    <ul>
        @foreach (var song in Model.Songs)
        {
            <li>@song.Title</li>
        }
    </ul>
    <a href="/Song/Create/@Model.Id">Add Song</a>
</body>
</html>
