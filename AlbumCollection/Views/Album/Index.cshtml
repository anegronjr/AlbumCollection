@model IEnumerable<AlbumCollection.Models.Album>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto|Ubuntu:100,300,400,600,700" rel="stylesheet">
    <link href="~/CSS/Shared.css" rel="stylesheet">
    <link href="~/CSS/AlbumIndex.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <header>
            <a class="logo" href="~/Album/Index"><span class="logo-1">Album</span><span class="logo-2">Collection</span></a>
            <nav>
                <ul>
                    <li>Home</li>
                    <li>Albums</li>
                    <li>Artists</li>
                    <li>About</li>
                </ul>
            </nav>
        </header>
        <main>
            <div class="albums-module">
                <div class="headline"><span>All Albums</span></div>
                <div class="albums-container">

                    @foreach (var album in Model)
                    {
                    <a class="album-card" style="background-image: url(@album.ImageUrl);" href="~/Album/Details/@album.AlbumId">
                        <div class="album-overlay">
                            <div class="album-content">
                                <span class="album-title">@album.Title</span>
                                <span class="album-artist">By: @album.Artist</span>
                            </div>
                        </div>
                    </a>
                    }
                </div>
            </div>
        </main>
    </div>




